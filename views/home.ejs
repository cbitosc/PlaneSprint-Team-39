<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EdTech</title>
    <style>
        .box {
  height: 170px;
  padding-bottom: 15px;
  width: 50%;
}
html {
  scroll-behavior: smooth;
}

.course-card {
  transition:0.3s;
}

.course-card:hover  p{
  transform: scaleY(0.66)
}
.course-card:hover  h3{
  transform: scaleY(0.88)
}
.course-card:hover  button{
  transform: scaleY(0.88)
}

.course-card:hover {
  transform: scaleY(1.2);
  transform-origin: bottom;
}
    </style>
    <script>
      function scrollToBottom(){
        let pageBottom = document.querySelector("#pageBottom");
        pageBottom.scrollIntoView()
      }
    </script>
  </head>

  <body>
    <!-- Navigation -->
    <%- include('navigationBar') %>

    <!-- Hero Section -->
    <header class="bg-blue-400 py-16">
      <div class="container mx-auto text-center">
        <% if(!isInst){ %>
          <h1 class="text-4xl md:text-6xl text-white font-semibold mb-6">
          Unlock Your Learning Potential
        </h1>
        <% }else{ %>
          <h1 class="text-4xl md:text-6xl text-white font-semibold mb-6">
          Welcome <%= user.firstName+" "+user.lastName %>
        </h1>
        <% } %>
        <p class="text-lg md:text-xl text-white mb-10">Learn, Grow, Succeed</p>
          <% if(isInst){ %>
          <a
          href="/newCourse"
          class="bg-white text-blue-600 hover:bg-blue-700 hover:text-white py-3 px-8 rounded-md font-medium"
          >Create New Course</a>
        <% }else{ %>
          <a
          onclick="scrollToBottom()",
          class="bg-white text-blue-600 hover:bg-blue-700 hover:text-white py-3 px-8 rounded-md font-medium" style="cursor:pointer;"
          >Get Started</a>
        <% } %>
      </div>
    </header>

    <!-- Features Section -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          Why Choose Us?
        </h2>
        <div class="flex flex-col md:flex-row md:justify-between">
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0 ml-5">
            <img
              class="mx-auto mb-4"
              src="https://www.dreamhost.com/blog/wp-content/uploads/2018/09/elements-web-design-opt-730x485.jpg"
              alt="Feature 1"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Interactive Courses
            </h3>
            <p class="text-center text-gray-700">
              Engage in interactive courses designed to enhance your learning
              experience.
            </p>
          </div>
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0">
            <img
              class="w-96 h-max mx-auto mb-4"
              src="https://media.istockphoto.com/id/1328854691/vector/young-woman-leads-video-conference-girl-is-chatting-with-friends-by-video-link.jpg?s=612x612&w=0&k=20&c=j5r7YnS7c3LewwSQb9aQki91Q_9yvZDjYMMx8c9Up1Q="
              alt="Feature 2"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Expert Instructors
            </h3>
            <p class="text-center text-gray-700">
              Learn from industry experts who are passionate about teaching and
              guiding you.
            </p>
          </div>
          <div class="max-w-md mx-auto md:mx-0">
            <img
              class=" mx-auto mb-4"
              src="https://cdn.dribbble.com/users/1741046/screenshots/14037348/media/c3ba6ee54217b9d255560b7e42ff8fb7.png?resize=400x0"
              alt="Feature 3"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Flexible Learning
            </h3>
            <p class="text-center text-gray-700">
              Study at your own pace and access course materials from anywhere,
              anytime.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          What Our Students Say
        </h2>
        <div class="flex flex-col md:flex-row md:justify-between">
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0">
            <div class="bg-blue-600 text-white py-6 px-8 rounded-md mb-4">
              <p class="text-lg">
                "I had an amazing learning experience with EdTech. The courses
                were well-structured and the instructors were highly
                knowledgeable. I highly recommend it!"
              </p>
              <p class="mt-4 font-semibold">EdTech1</p>
            </div>
          </div>
          <div class="max-w-md mx-auto md:mx-0">
            <div class="bg-blue-600 text-white py-6 px-8 rounded-md mb-4">
              <p class="text-lg">
                "EdTech helped me acquire new skills and advance my career. The
                platform is user-friendly and the support team is always
                helpful. Thank you!"
              </p>
              <p class="mt-4 font-semibold">EdTech2</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Course Catalog -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          Course Catalog
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 ml-5 mr-5">
          <!-- Course 1 -->
          <% for(let i=0; i < courseList.length; i++){ %>
            <div class="bg-white rounded-md shadow-lg">
            <img
              class="w-full h-48 object-cover rounded-t-md"
              src="<%= courseList[i].img %>"
              alt="Course 1"
            />
            <div class="p-6">
              <h3 class="text-xl text-blue-600 font-semibold mb-2">
                <%= courseList[i].courseName %>
              </h3>
              <p class="text-gray-700 mb-4">
                <%= courseList[i].description %>
              </p>
              <a href="/courseDetails/<%= courseList[i].id %>" class="text-blue-600 hover:underline">Learn More</a>
            </div>
          </div>
            <% } %>
          <!-- Add more course items as needed -->
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer class="bg-blue-600 py-8">
      <div class="container mx-auto text-white text-center">
        <p id="pageBottom">&copy; 2023 EdTech. All rights reserved.</p>
      </div>
    </footer>

  </body>
</html>

